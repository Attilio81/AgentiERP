# Database Configuration
# Example: mssql+pyodbc://username:password@localhost:1433/DatabaseName?driver=ODBC+Driver+18+for+SQL+Server
DATABASE_URL=mssql+pyodbc://user:password@server:1433/database?driver=ODBC+Driver+18+for+SQL+Server

# LLM Provider Configuration
# Options: anthropic | openai | gemini
LLM_PROVIDER=anthropic

# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI API Configuration (optional)
OPENAI_API_KEY=sk-openai-your-api-key-here

# Google Gemini API Configuration (optional)
GEMINI_API_KEY=sk-gemini-your-api-key-here

# Security Configuration
# Generate a secure random string with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters

# Session Configuration
SESSION_EXPIRE_HOURS=24

# Agent Configuration
AGENT_MODEL=claude-sonnet-4-5-20250929
FAQ_MODEL=claude-haiku-4-5-20250929

# API Configuration
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8501
