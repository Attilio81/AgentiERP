# ========================================
# DOCKER COMPOSE CONFIGURATION
# ========================================
# Questo file viene letto da docker-compose.yml
# Per esecuzione locale, usa invece backend/.env

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Usa host.docker.internal per connetterti al database sul tuo PC da Docker
DATABASE_URL=mssql+pyodbc://user:password@host.docker.internal:1433/EGM_AI?driver=ODBC+Driver+18+for+SQL+Server

# ========================================
# LLM PROVIDER CONFIGURATION
# ========================================
# Options: anthropic | openai | gemini
LLM_PROVIDER=anthropic

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Optional: OpenAI API Key
OPENAI_API_KEY=

# Optional: Google Gemini API Key
GEMINI_API_KEY=

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-minimum-32-chars

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_EXPIRE_HOURS=24

# ========================================
# MODEL CONFIGURATION
# ========================================
AGENT_MODEL=claude-sonnet-4-5-20250929
FAQ_MODEL=claude-haiku-4-5-20250929

# ========================================
# API URLS (Docker network)
# ========================================
# In Docker usa i nomi dei servizi (backend/frontend)
BACKEND_URL=http://backend:8000
FRONTEND_URL=http://frontend:8501

# ========================================
# SMTP EMAIL CONFIGURATION
# ========================================
SMTP_HOST=authsmtp.egmsistemi.it
SMTP_PORT=25
SMTP_USERNAME=smtp@egmsistemi.it
SMTP_PASSWORD=Egm.granata09
SMTP_USE_SSL=true
SMTP_FROM_EMAIL=smtp@egmsistemi.it
